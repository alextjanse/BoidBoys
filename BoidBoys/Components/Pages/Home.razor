@page "/"
<PageTitle>3D Boids - GPU Accelerated</PageTitle>

<div id="canvas-container" style="width: 100%; height: 100vh;"></div>
<div id="stats"
     style="position: absolute; top: 10px; left: 10px; color: #00ff88; font-family: monospace; background: rgba(0,0,0,0.8); padding: 15px; border-radius: 5px; z-index: 10;">
  <div>Boids: <span id="boid-count">-</span></div>
  <div>FPS: <span id="fps">-</span></div>
  <div>GPU: <span id="gpu-status">Init...</span></div>
  <div style="font-size: 0.8em; margin-top: 10px;">
    <div>Status: <span id="app-status">Loading...</span></div>
    <div style="margin-top: 5px; color: #88ff00;">
      Init: <span id="debug-init">pending</span> |
      Animate: <span id="debug-animate">pending</span> |
      State: <span id="debug-state">-</span>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
<script src="https://unpkg.com/three@0.128.0/examples/js/controls/OrbitControls.js"></script>
<script>
  window.addEventListener( 'error', function ( event )
  {
  console.error( 'Global error:', event.error );
  document.getElementById( 'app-status' ).textContent = 'ERROR: ' + ( event.error?.message || 'Unknown' );
  } );

  console.log( '=== Boids App Initialization ===' );
  console.log( 'THREE.js loaded:', typeof THREE !== 'undefined' );
  console.log( 'OrbitControls loaded:', typeof THREE.OrbitControls !== 'undefined' );
  document.getElementById( 'app-status' ).textContent = 'Checking WebGPU...';
</script>
<script src="boids.js"></script>

<style>
  :global(body),
  :global(html) {
  margin: 0;
  padding: 0;
  overflow: hidden;
  background: #000011;
  font-family: monospace;
  }

  :global(.page) {
  width: 100%;
  height: 100vh;
  }

  :global(.sidebar) {
  display: none;
  }

  :global(.top-row) {
  display: none;
  }

  :global(main) {
  width: 100%;
  height: 100%;
  }

  :global(.content) {
  width: 100%;
  height: 100%;
  padding: 0 !important;
  }

  #canvas-container {
  width: 100%;
  height: 100%;
  }
</style>